<html>
    <head>
    <title>schools</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <body>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <a class="navbar-brand" href="#">$BLOG$</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                      <div class="navbar-nav">
                        <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
                        <a class="nav-item nav-link" href="/new">New Post</a>
                       
                      </div>
                    </div>
            </nav>

        
        
        <div style="margin-left:30% ;margin-right: 30%;">
                <h1 style="text-align: center;text-transform: uppercase;"><b><%= blog.title %></b></h1>
                <img src="<%= blog.image %>" style="width: 100%;">
                <span><%= blog.created.toDateString() %></span>
                <br>
                <br>
                <br>
                <b>DESCRIPTION</b>
                <p><%- blog.body %></p>
                <a class="btn btn-primary" style="width: 100px;" href="/blog/<%= blog._id %>/update">UPDATE</a>
                <br>
                <br>    
                <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" >
                    <input type="submit" class="btn btn-danger" value="delete" style="width: 100px;">
                </form>     
        </div>
    </body>
</html>